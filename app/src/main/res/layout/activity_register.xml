<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/mytoolbar"
            android:id="@+id/mytoolbar"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/autoRelativeLayout"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300px">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView4"
                android:background="@null"
                android:hint="  Mobile Phone"
                android:textColorHint="#53e6e6e6"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/autoRelativeLayout1"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_below="@+id/autoRelativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/pinumber" />

            <EditText
                android:id="@+id/Pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView5"
                android:background="@null"
                android:hint="  PINumber"
                android:textColorHint="#53e6e6e6"
                android:textSize="24sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />

            <RelativeLayout
                android:id="@+id/get"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/money_ll"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_horizontal"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/autoRelativeLayout2"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_below="@+id/autoRelativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView6"
                android:background="@null"
                android:hint="  Password"
                android:textColorHint="#53e6e6e6"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/autoRelativeLayout3"
            android:layout_width="700px"
            android:layout_height="100px"
            android:layout_below="@+id/autoRelativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/Cpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView8"
                android:background="@null"
                android:hint="  Confirm password"
                android:textColorHint="#53e6e6e6"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/autoRelativeLayout3"
            android:layout_alignStart="@+id/autoRelativeLayout3"
            android:layout_below="@+id/autoRelativeLayout3"
            android:layout_marginTop="66dp"
            android:background="@drawable/money_ll">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:text="注         册"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>