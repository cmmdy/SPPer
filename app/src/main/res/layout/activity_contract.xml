<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.drop.spper.mvp.ui.activity.FeedBackActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/include6"
            layout="@layout/mytoolbar" />


        <ImageView
            android:layout_width="600px"
            android:layout_height="600px"
            android:src="@drawable/contactus"
            android:layout_marginTop="120dp"
            android:id="@+id/imageView7"
            android:layout_below="@+id/include6"
            android:layout_centerHorizontal="true" />

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200px"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200px">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话： 13800000000"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_below="@+id/linearLayout7"
                android:layout_alignParentStart="true"
                android:layout_margin="30px"
                android:id="@+id/textView7" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮        箱： 00000000@163.com"
                android:textSize="20sp"
                android:layout_margin="30px"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地        址： 浙江传媒学院"
                android:textSize="20sp"
                android:layout_margin="30px"
                android:textColor="@color/white"
                android:layout_below="@+id/linearLayou87"
                />



        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>