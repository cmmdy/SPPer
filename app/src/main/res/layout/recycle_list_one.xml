<?xml version="1.0" encoding="utf-8"?>
<com.drop.spper.mvp.ui.widget.AutoCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7px"
    android:layout_column="5">

    <RelativeLayout
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="365px"
            android:scaleType="centerCrop"
            tools:src="@drawable/timg" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_name"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="9px"
            android:layout_marginStart="22px"
            android:src="@drawable/head_portrait" />

        <TextView
            android:id="@+id/photographer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/circleImageView"
            android:layout_marginStart="6px"
            android:layout_toEndOf="@+id/circleImageView"
            android:text="xx作者"
            android:textColor="@color/black"
            android:textSize="15px" />

        <TextView
            android:background="@color/transparent"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_avatar"
            android:layout_marginBottom="4px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:layout_marginTop="4px"
            android:gravity="center"
            android:text="作品描述"
            android:textSize="16sp"
            android:layout_toStartOf="@+id/imageView"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/love"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11px"
            android:id="@+id/imageView" />
    </RelativeLayout>

</com.drop.spper.mvp.ui.widget.AutoCardView>